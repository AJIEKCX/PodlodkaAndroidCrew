<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PodlodkaAndroidCrew" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
    </style>

    <style name="Theme.PodlodkaAndroidCrew.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PodlodkaAndroidCrew.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PodlodkaAndroidCrew.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>